
<div class="container col-4 mt-4">
  <%= form_with(model: [@org_active, project]) do |form| %>
    <% if project.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(project.errors.count, "error") %> prohibited this image from being saved:</h2>

        <ul>
          <% project.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <form>
      <div class="form-group">

        <div class="form-group mt-0">
          <%= form.label :name, style: "display: block", class: "flabel" %>
          <%= form.text_field :name, class: "col-12" %>
        </div>

        <div class="form-group mt-3">
          <%= form.label :image, "Attach image" %>
          <%= form.file_field :image, value: "Select Image", accept: "image/jpeg,image/gif,image/png", class: 'form-control' %>
        </div>
        
        <div class="form-group mt-3">
            <%= form.label :details, style: "display: block", class: "flabel" %>
            <%= form.text_field :details, class: "col-12" %>
        </div>

        <div class="form-group col-md-12 mt-3">
          <%= form.label :expected_completion_date, style: "display: block", class: "flabel" %>
          <%= form.date_field :expected_completion_date, class: "form-control col-md-12 mt-1" %>
        </div>

        <%= form.hidden_field :organization_id, value: @org_active.id %>
        <% # debugger %>

      </div>

      <button type="submit" class="btn btn-primary mt-4 col-12">Save Project </button>
    </form>

  <% end %>

</div>

