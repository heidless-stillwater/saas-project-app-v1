
<div class="container col-6">
  <%= form_with(model: artifact) do |form| %>
    <% if artifact.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(artifact.errors.count, "error") %> prohibited this image from being saved:</h2>

        <ul>
          <% artifact.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <form>
      <div class="form-group">
        <%= form.label :name, style: "display: block", class: "flabel" %>
        <%= form.text_field :name %>
      </div>

      <div class="mt-3">
        <%= form.label :artimg, "Attach image" %>
        <%= form.file_field :artimg, accept: "image/jpeg,image/gif,image/png", class: 'form-control' %>
      </div>
      
      <div class="form-group mt-3">
        <%= form.label :picture, style: "display: block", class: "flabel" %>
        <%= form.text_field :picture, class:"form-control" %>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary mt-3">Save Artifact </button>
      </div>

    </form>

    <div class="center me-0 mb-5 mt-5">    
      <div class="d-flex flex-row justify-content-center">

        <%= link_to artifact do %>
          <%= fa_icon "eye 2x", class: "mt-1 mx-2 text-primary" %>
        <% end %>

        <%= link_to artifacts_path do %>
          <%= fa_icon "list 2x", class: "mt-1 mx-2" %>
        <% end %>

        <%= link_to artifact, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <%= fa_icon "trash 2x", class: "mt-1 mx-2 text-danger" %>
        <% end %>

      </div>
    </div>

  <% end %>
</div>

