<div class="container">

  <% content_for :title, "Artifacts" %>

  <div class="mb-5">
    <h1 class="text-center mt-4 mb-3 text-white">Artifacts</h2>
    <div class="text-center">
      <%= link_to "New Artifact", new_artifact_path, class: "btn btn-success mt-2" %>
    </div>
  </div>

  <div id="artifacts">
    <div class="row row-cols-4 justify-content-center">
      <% @artifacts.each do |artifact| %>
      
        <div class="center me-0 mb-5">
          <%= render artifact %>
          
          <div class="d-flex flex-row mt-1 justify-content-center">

            <%= link_to artifact do %>
              <%= fa_icon "eye 2x", class: "mt-1 mx-2 text-primary" %>
            <% end %>

            <%= link_to edit_artifact_path(artifact) do %>
              <%= fa_icon "edit 2x", class: "mt-1 mx-2 text-success" %>
            <% end %>

            <%= link_to artifact, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <%= fa_icon "trash 2x", class: "mt-1 mx-2 text-danger" %>
            <% end %>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

