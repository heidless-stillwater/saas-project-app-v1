
<div id="<%= dom_id item %>">
  <div class="d-flex flex-row justify-content-center">

    <div class="card text-center" style="width: 19rem;">
      <div class="card-body">
        <div class="img-responsive center-block">  
          <% if item.item_img.present? %>  
            <%= image_tag item.item_img, width: "50", class: "mx-auto d-block card-img-top" %>
          <% else %>
            <h1 class="text-center my-5"> No Avatar </h1>
          <% end %>
        </div>
        <h5 class="card-title"><%= item.name %></h5>
        <h6 class="card-subtitle"><%= item.description %></h6>
        <p class="card-text mt-2"><%= link_to Project.find(item.project_id).name, organization_project_path(@org_active, item.project_id) %></p>

            

      </div>
    </div>
  </div>



  <div class="d-flex flex-row justify-content-center mt-0">
    <% # debugger %>

    <%= link_to edit_item_path(item) do %>
      <%= fa_icon "edit 2x", class: "mt-1 mx-2 text-success" %>
    <% end %>

    <%= link_to organization_project_path(@org_active, item.project_id) do %>
      <%= fa_icon "list 2x", class: "mt-1 mx-2" %>
    <% end %>

    <%= link_to  item, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <%= fa_icon "trash 2x", class: "mt-1 mx-2 text-danger" %>
    <% end %>


  </div>




</div>

