

<div class="container col-4 mt-4">

  <%= form_with(model: item) do |form| %>
    <% if item.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>
        <ul>
          <% item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, class: "col-12" %>
    </div>

    <div class="mt-2">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description, class: "col-12" %>
    </div>

    <div class="mt-2">
      <%= form.label :image, style: "display: block" %>
      <%= form.file_field :item_img, class: "col-12" %>
    </div>

    <div>
      <% # debugger %>
      <%= form.hidden_field :project_id, value: project_id %>
    </div>

    <div class="mt-3">
      <button type="submit" class="btn btn-primary mt-0 col-12">Save Project </button>
    </div>
  <% end %>

</div>