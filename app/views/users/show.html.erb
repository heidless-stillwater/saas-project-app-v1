
<div class="container">
  
  <% # debugger %>
  <div class="mt-4 mb-3">
    <h2 class="text-center my-3 text-white"><%= @user.email %></h2>
  </div>

  <div class="mt-4 mb-3">
    <h4 class="text-center mt-2 my-0"><%= fa_icon 'money 1x' %> <%= Plan.find(@user.plan_id).name %></h4> 
  </div>

  <div class="mt-4">    
    <!-- <div class="card card-header results-block mt-3"> -->
    <div class="">
      <!-- <%= gravatar_for @user, size: 300 %> -->

      <div class="img-responsive center-block">      
        <% if current_user.avatar.present? %>  
          <% # debugger %>
          <%= image_tag @user.avatar, width: 400, class: "mx-auto d-block" %>
        <% else %>
          <h1 class="text-center my-5"> No Avatar </h1>
        <% end %>
      </div>

      <div class="my-3 text-center">
        <table class="col-md-12">
          <tbody>
            <tr>
              <td>
                <span class="">
                  <h4 class="text-center mt-2 my-0"><%= @user.username %></h4>
                </span>
              </td>
            </tr>

          </tbody>
        </table>
      </div>


      <div class="d-flex flex-row justify-content-center mt-4">
        <%= link_to edit_user_registration_path do %>
          <%= fa_icon "edit 2x", class: "mt-1 mx-2" %>
        <% end %>
      </div>

      <%= render 'shared/profile_gallery' %>

    </div>
  </div>
  
</div>

