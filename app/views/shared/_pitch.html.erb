
<main>
  <div class="text-center mt-5 mb-5">
    <h1 class="card-title pricing-card-title" >Photo Management App!</h2>
    <h4 class="card-title pricing-card-title top-margin" style="mt-5"><%= button_to "Trial Account Sign In", new_user_session_path, class: "btn btn-xs btn-success" %> </h4>
    <p class="card-title pricing-card-title" >&nbsp;</p>
    <p class="card-title pricing-card-title" >email: jsnow@choam.com</p>
    <p class="card-title pricing-card-title" >password: password</p>
  </div>

  <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
    <div class="col">
      <div class="card mb-4 rounded-3 shadow-sm">
        <div class="card-header py-3">
          <h4 class="my-0 fw-normal">Free</h4>
        </div>
        <div class="card-body">
          <h1 class="card-title pricing-card-title">$0<small class="text-muted fw-light">/mo</small></h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li>10 users included</li>
            <li>2 GB of storage</li>
            <li>Email support</li>
            <li>Help center access</li>
          </ul>
          <%= link_to 'Sign up for free', new_user_registration_path(plan_id: 2), class: 'w-100 btn btn-lg btn-outline-primary sign-up' %>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card mb-4 rounded-3 shadow-sm">
        <div class="card-header py-3">
          <h4 class="my-0 fw-normal">Pro</h4>
        </div>
        <div class="card-body">
          <h1 class="card-title pricing-card-title">$15<small class="text-muted fw-light">/mo</small></h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li>20 users included</li>
            <li>10 GB of storage</li>
            <li>Priority email support</li>
            <li>Help center access</li>
          </ul>
          <%= link_to 'Get Started', new_user_registration_path(plan_id: 1), class: 'w-100 btn btn-lg btn-primary sign-up' %>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card mb-4 rounded-3 shadow-sm border-primary">
        <div class="card-header py-3 text-white bg-primary border-primary">
          <h4 class="my-0 fw-normal">Enterprise</h4>
        </div>
        <div class="card-body">
          <h1 class="card-title pricing-card-title">$29<small class="text-muted fw-light">/mo</small></h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li>30 users included</li>
            <li>15 GB of storage</li>
            <li>Phone and email support</li>
            <li>Help center access</li>
          </ul>
          <%= link_to 'Gontact Us', new_user_registration_path, class: 'w-100 btn btn-lg btn-primary sign-up' %>

        </div>
      </div>
    </div>
  </div>

</main>
