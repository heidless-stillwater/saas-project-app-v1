
      <div class="my-3 text-center">
        <% if current_user.images.attached? %>

          <div class="row">
            <% current_user.images.each do |image| %>
              <div class="card card-header results-block mx-1 my-1" style="width: 20rem;">
                <div class="card-body">
                  <%= image_tag(image, width: 260, class: "mcard-img-top x-auto d-block", alt:"Card image cap") %>
                  <h5 class="card-title mt-2">Card title</h5>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>

                <%= link_to "Remove", remove_image_user_path(image), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, width: 1, class: "btn btn-danger" %>
                <br />
              </div>
            <% end %>
          </div>

        <% end %>
      </div>


